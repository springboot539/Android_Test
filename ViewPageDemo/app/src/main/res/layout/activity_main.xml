<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <Button
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="跳转到ViewPager"
       android:onClick="jumpToViewPage"/>

   <Button
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:onClick="jumpToViewPagerFragmentBottom"
       android:text="加上底部导航的ViewPager"
       />

   <Button
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:onClick="jumpToViewPagerFragmentBottomNav"
       android:text="bottomNavigationView实现底部导航"
        />
</LinearLayout>